<script>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener("DOMContentLoaded", function () {
        // Obtener el checkbox y la fila de datos de envío
        var checkbox = document.getElementById("domicilioUsuario");
        var datosEnvioRow = document.querySelector(".datos");

        // Verificar si el checkbox está marcado inicialmente
        if (checkbox.checked) {
            // Ocultar la fila de datos de envío si el checkbox está marcado
            datosEnvioRow.style.display = "none";
        }

        // Agregar un evento de cambio al checkbox
        checkbox.addEventListener("change", function () {
            // Verificar si el checkbox está marcado
            if (checkbox.checked) {
                // Ocultar la fila de datos de envío si el checkbox está marcado
                datosEnvioRow.style.display = "none";
            } else {
                // Mostrar la fila de datos de envío si el checkbox está desmarcado
                datosEnvioRow.style.display = "";
            }
        });
    });
</script>